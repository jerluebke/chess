#########################
# Chess Style Sheet     #
#########################

# axis style
# no grid and no ticks
grid.linestyle      :   None
xtick.major.size    :   0
ytick.major.size    :   0

# choose font, which displays unicode chess character correctly
text.usetex         :   False
font.family         :   sans-serif
font.sans-serif     :   DejaVu Sans
